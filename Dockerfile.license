FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY license_requirements.txt .
RUN pip install --no-cache-dir -r license_requirements.txt

# Copy license server code
COPY license_server.py .

# Set environment variables
ENV PORT=5000
ENV FLASK_ENV=production

# Expose port
EXPOSE 5000

# Run the server
CMD ["python", "license_server.py"]
